---
import JavaIcon from "./icons/JavaIcon.astro"
import MysqIcon from "./icons/MysqIcon.astro"
const TAGS={
    JAVA: {
        name: "Java",
        class: "bg-[#003259] text-white",
        icon: JavaIcon,
    },
    MYSQL: {
        name: "MySQL",
        class: "bg-[#003259] text-white",
        icon: MysqIcon,
    },
}

const PROJECTS = [
    {
        title: 'Biblioteca BookWise Solutions',
        description: 'Proyecto de un sistema para una Biblioteca',
        image: '/projects/proyecto1.webp',
        tags: [TAGS.JAVA, TAGS.MYSQL]
    }
]
---
{
    PROJECTS.map(({ image, title, description, tags}) =>(
        <article>
            <h3 class="text-2xl font-semibold text-blue-400 mb-2">{title}</h3>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <ul class="flex gap-x-2 flex-row mb-3">
                {tags.map(tag => (
                    <li>
                        <span class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                            <tag.icon class="size-4"/> {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            <div class="relative group">
                <a href="BookWize">
                    <img class="rounded shadow-2xl shadow-white/10" src={image} alt={`Captura de pantalla del proyecto ${image}`}/>    
                    <div class="absolute inset-0 bg-opacity-70 bg-blue-950 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                        <span class="text-white text-lg font-bold">Ver Descripci√≥n del Proyecto</span>
                    </div>
                </a>
            </div>
        </article>
    ))
}
