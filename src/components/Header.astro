    <nav class="hidden md:flex flex-row gap-x-4 lg:gap-x-10 opacity-80">
        <a href="/" class="hover:text-blue-400">Inicio</a>
        <a href="/#sobremi" class="hover:text-blue-400">Sobre mí</a>
