<header class="fixed top-0 left-0 right-0 z-10">
    <div class="bg-gray-950/90 backdrop-blur-sm shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center py-4">
          <div class="flex-shrink-0">
            <a href="/" class="block">
              <img 
                src="/hacker.png" 
                alt="Logo" 
                class="w-10 h-10 md:w-12 md:h-12 object-cover rounded-full transition-transform hover:scale-110"
              />
            </a>
          </div>
          
          <nav class="hidden md:flex space-x-8">
            <a href="/" class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm md:text-base">Inicio</a>
            <a href="/#sobremi" class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm md:text-base">Sobre mí</a>
            <a href="/#experiencia" class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm md:text-base">Experiencia</a>
            <a href="/#proyectos" class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm md:text-base">Proyectos</a>
          </nav>
  
          <!-- Menú móvil -->
          <div class="md:hidden">
            <button 
              id="mobile-menu-button" 
              class="text-gray-300 hover:text-white focus:outline-none focus:ring-2 focus:ring-blue-400 rounded-lg p-2"
              aria-label="Menu"
            >
              <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
              </svg>
            </button>
          </div>
        </div>
  
        <!-- Menú móvil expandible -->
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="flex flex-col space-y-3">
            <a href="/" class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm px-4 py-2 rounded-lg hover:bg-gray-800">Inicio</a>
            <a href="/#sobremi" class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm px-4 py-2 rounded-lg hover:bg-gray-800">Sobre mí</a>
            <a href="/#experiencia" class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm px-4 py-2 rounded-lg hover:bg-gray-800">Experiencia</a>
            <a href="/#proyectos" class="text-gray-300 hover:text-blue-400 transition-colors duration-200 text-sm px-4 py-2 rounded-lg hover:bg-gray-800">Proyectos</a>
          </div>
        </div>
      </div>
    </div>
  </header>
  
  <style>
    body {
      padding-top: 4rem;
    }
  
    @media (min-width: 768px) {
      body {
        padding-top: 5rem;
      }
    }
  </style>
  
  <script>
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
  
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
      });
  
      // Cerrar menú al hacer clic en un enlace
      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
        });
      });
    }
  </script>