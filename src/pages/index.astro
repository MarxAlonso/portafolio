---
import Layout from '../layouts/Layout.astro';
import Social from '../components/Social.astro';
import Badge from '../components/Badge.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import Facebook from '../components/icons/Facebook.astro';
import Gmail from '../components/icons/Gmail.astro';
import Briefcase from '../components/icons/Briefcase.astro';
import Experience from '../components/Experience.astro';
import Projects from '../components/Projects.astro';
import SectionContainer from '../components/SectionContainer.astro';
import ProjectsFull from '../components/icons/ProjectsFull.astro';
import WhatsApp from '../components/icons/WhatsApp.astro';
import Github from '../components/icons/Github.astro';
---

<Layout title="Portafolio | Marx Chipana" description="Contrata a Creaciones Peña para crear ." >
	<main class="px-4" id="sobremi">
		<SectionContainer class="py-36 pb-32">
			<img class="rounded-full w-15 h-12 mb-4" src="https://i.blogs.es/66b2a4/photo-1511367461989-f85a21fda167/1366_2000.jpeg" alt="Logo" />
			<h1 class="text-white text-2xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">Marx Chipana <a href="https://www.linkedin.com/" target="_blank" rel="noopener" class="flex justify-center items-center"><Badge>Disponible para trabajar</Badge></a></h1>
			<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]"><span>1 año de experiencia.</span><span class="text-yellow-200/90 opacity-80"> Darrollador Web</span>.<span class="text-red-100/90"> De Lima, Perú</span>. <span class="opacity-85">Me especializo en realizar plataformas creativas</span></h2>
			<nav class="flex gap-4 mt-8 flex-wrap">
				<Social href="https://www.linkedin.com/">
					<Linkedin class="size-4 md:size-6"/>
					LinkedIn
				</Social>
				<Social href="https://www.facebook.com/">
					<Facebook class="size-4 md:size-6"/>
					Facebook
				</Social>
				<Social><!-- href="mailto:marxchip99@gmail.com" -->
					<Gmail class="size-4 md:size-6"/>
					marxchip99@gmail.com
				</Social>				
				<Social ><!--href="https://api.whatsapp.com/send?phone=51944603274" -->
					<WhatsApp class="size-5 md:size-6"/>
					+51944603274
				</Social>
				<Social href="https://github.com/MarxAlonso">
					<Github class="size-4 md:size-6"/>
					Marx Alonso
				</Social>
			</nav>
		</SectionContainer>

		<SectionContainer id="experiencia">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<Briefcase class="size-7"/>
				Experiencia Laboral
			</h2>
			<Experience />
		</SectionContainer>

		<SectionContainer id="proyectos">
			<h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
				<ProjectsFull class="size-7"/>
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
	</main>
</Layout>
