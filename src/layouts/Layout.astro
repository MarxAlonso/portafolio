---
import "@fontsource-variable/onest"
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
interface Props {
	title: string
	description: string
}

const { description, title } = Astro.props;

---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/hacker.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-7330512160006531"
     crossorigin="anonymous"></script>
	</head>
	<body class="px-4" id="inicio">
		<Header />
		<slot />
		<Footer />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: "Onest", system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	
	body{
		background: linear-gradient(135deg, #050505, #101e42);
		flex-direction: column;
		display: flex;
		min-height: 100vh;
	}
	/* Estilizando el scroll */
	/* Fondo del scroll */
	::-webkit-scrollbar {
		width: 12px; /* Ancho del scroll */
	}

	/* Color del track del scroll */
	::-webkit-scrollbar-track {
		background: #050505;
	}

	/* Color del thumb del scroll */
	::-webkit-scrollbar-thumb {
		background-color: #122455; /* Azul oscuro */
		border-radius: 20px; /* Redondeado */
		border: 3px solid #050505; /* Espacio entre el thumb y el track */
	}

	/* Color del thumb del scroll en hover */
	::-webkit-scrollbar-thumb:hover {
		background-color: #1a3875; /* Azul más claro */
	}

	/* Color del thumb del scroll en active */
	::-webkit-scrollbar-thumb:active {
		background-color: #1a3875; /* Azul más claro */
	}

	@media (prefers-reduced-motion: reduce){
		html{
			scroll-behavior: auto;
		}
	}
</style>
